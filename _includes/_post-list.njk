{% if not post.data.draft %}
<article class="post" id="{{post.fileSlug}}">
	<header>
		<h2>
			<a href="{{ post.url | url }}">{{ post.data.title }}</a>
		</h2>
		<div class="post-meta">
			<time datetime="{{ post.date.toISOString() }}">{{ post.date.toLocaleString("en-gb", {
				dateStyle: "long"
			}) }}</time>
		</div>
	</header>
	{% set summary = post.data.summary or post.data.page.excerpt %}
	<div class="summary">
		{% if summary %}
			{{ summary | md | safe }}
			<p><a href="{{ post.url | url }}" class="call-to-action">Continue reading</a></p>
		{% else %}
			{{ post.content | md | safe }}
		{% endif %}
	</div>

	<footer class="post-meta">
		{% import "_tag-list.njk" as taglist %}
		{{ taglist.render(post.data.tags) | safe }}
	</footer>
</article>

<hr>
{% endif %}
